@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
</head>
<body>
   

    <div id="sample">
        <h2>COFFEE SHOP REGISTRATION</h2>
        <p>Please complete the information below and click Submit.</p>
        <form id="my-form" action="/cgi-bin/umbrella.pl" method="post" action="./action="myPage.php"">
            <div id="align">
                <input type="hidden" name="required" value="firstname,lastname,email" />
                <input type="hidden" name="title" value="Thank you for registering your coffee shop" />
                <input type="hidden" name="return_link_url" value="
    https://www.example.com/index.shtml" />
                <input type="hidden" name="return_link_title" value="Go to the Homepage" />
                <label for="name">FIRST NAME:</label><br />
                <span><input type="text" name="firstname" id="name" class="data-entry" /></span><br /><br />
                <label for="name">LAST NAME:</label><br />
                <span><input type="text" name="lastname" id="name" class="data-entry" /></span><br /><br />
                <label for="email">E-MAIL ADDRESS:</label><br />
                <span><input type="email" name="email" id="email" class="data-entry" /></span><br /><br />
                <p>Coffee Source</p>
                <select name="product1" size="3">
                    <option value="Central">Central American</option>
                    <option value="South">South American</option>
                    <option value="Carribean">Carribean</option>
                    <option value="Other">Other</option>
                </select><br /><br />
                <p>Coffee Consistency Sold</p>
                <select name="os">
                    <option value="Grinded">Grinded</option>
                    <option value="KCup">KCUP</option>
                    <option selected="WholeBean" value="WholeBean">Whole Bean</option>
                </select><br /><br />
                <p>Estimated Cup:</p>
          
                <p>OTHER PRODUCTS (Hold the Ctrl key to select more than one):</p>
                <select multiple="multiple" name="product2" size="3">
                    <option value="shirts">Shirts</option>
                    <option value="CoffeeMugs">Coffee Mugs</option>
                    <option value="Bracelets">Bracelets</option>
                </select><br /><br />
                <label for="comments2">Additional Information:</label><br />
                <span><textarea name="comments" id="comments2" rows="4" cols="20"></textarea></span><br /><br />
                <span>
                    <input type="reset" class="button" value="RESET" />
                    <input onclick="location.href='https://localhost:7170/Home/Privacy'" type="button" class="button" value="SUBMIT"   />

                </span><br />
            </div><!--end div align-->
        </form>
    </div><!--end div sample-->

</body>
</html>
